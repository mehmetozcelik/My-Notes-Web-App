</script>

<script>

   $(".CategorySelected").click(function () {

        var id = $(this).attr('id');
        //alert(id);

        $.ajax({
            method: "GET",
            url: "/Home/CategorySelect/" + id

        }).done(function (content) {

            $("#bodyphoto").hide();
            $("#notes").html(content);

            $(function () {

                $.ajax({
                    method: "GET",
                    url: "/Home/CategoryName/" + id

                }).done(function (content) {

                    $("#categoryheader").html(content);

                    //$("#deger").attr('value', id);

                }).fail(function () {

                    alert("Bir hata meydana geldi !!");
                });
            });



        }).fail(function () {

            alert("Bir hata meydana geldi !!");
        });

   });

   $("#MostLiked").click(function () {
      
        $.ajax({
            method: "GET",
            url: "/Home/MostLike/"

        }).done(function (content) {

             $("#bodyphoto").hide();
            $("#notes").html(content);

        }).fail(function () {

            alert("Bir hata meydana geldi !!");
        });

   });

</script>